<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">	
				
	<!-- Proporciona la API de validaciones de UDA -->
	<bean id="validationManager" class="com.ejie.x38.validation.ValidationManager" />
	<!-- Controller que permite la validacion de una propiedad de un bean -->
	<bean id="validateController" class="com.ejie.x38.validation.ValidationController" />
	
</beans>